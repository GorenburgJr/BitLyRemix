generator client {
  provider = "prisma-client-js"
  output   = "./"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id
  email        String @unique
  passwordHash String
}

model Url {
  userId   String   @id
  fromUrl  String
  shortUrl String
  date     DateTime @default(now())
}

model Request {
  id String @id
}
